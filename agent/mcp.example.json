{
  "mcpServers": {
    "network": {
      "command": "python",
      "args": [
        "src/tools/network/server.py"
      ],
      "description": "Comprehensive network tools: HTTP requests, WHOIS, DNS, subdomain enumeration, IP info, web stack detection"
    },
    "code": {
      "command": "python",
      "args": [
        "src/tools/code/server.py"
      ],
      "description": "Code execution and analysis tools",
      "env": {
        "SPARKY_DB_URL": "${SPARKY_DB_URL}"
      }
    },
    "shell": {
      "command": "python",
      "args": [
        "src/tools/shell/server.py"
      ],
      "description": "Shell command execution tools"
    },
    "self-update": {
      "command": "python",
      "args": [
        "src/tools/self_update/server.py"
      ],
      "description": "Self-update functionality"
    },
    "utilities": {
      "command": "python",
      "args": [
        "src/tools/miscellaneous/server.py"
      ],
      "description": "Comprehensive utility tools: math operations, string manipulation, base64 encoding, JSON operations, sandboxed code execution"
    },
    "criminal_ip": {
      "command": "python",
      "args": [
        "src/tools/criminal_ip/server.py"
      ],
      "description": "Criminal IP threat intelligence tools"
    },
    "knowledge_graph": {
      "command": "python",
      "args": [
        "src/tools/knowledge_graph/server.py"
      ],
      "description": "Knowledge graph and memory management (unified SQLite storage)",
      "env": {
        "SPARKY_DB_URL": "${SPARKY_DB_URL}"
      }
    },
    "introspection": {
      "command": "python",
      "args": [
        "src/tools/introspection/server.py"
      ],
      "description": "Introspection tools for system and self-monitoring"
    },
    "metaMCP": {
      "url" : "http://metamcp:12008/metamcp/sparky/sse",
      "type" : "sse",
      "description" : "MetaMCP server for testing",
      "bearerToken" : "${METAMCP_API_KEY}"
    }
  }
}